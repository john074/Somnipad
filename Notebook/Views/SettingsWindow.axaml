<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="Notebook.SettingsWindow"
        Title="Settings"
        Width="300"
        Height="150"
        xmlns:vm="using:Notebook.ViewModels"
        x:DataType="vm:SettingsViewModel"
        x:CompileBindings="True">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto">
          <Label Grid.Column="0" Grid.Row="0" Margin="40">Theme:</Label>
          <ComboBox Grid.Column="1" Grid.Row="0" Width="150" Margin="-30, 35"
                    ItemsSource="{Binding Themes}"
                    SelectedItem="{Binding SelectedTheme}">
          </ComboBox>

          <Label Grid.Column="0" Grid.Row="1" Margin="20, 0">Draw lines:</Label>
          <CheckBox Grid.Column="1" Grid.Row="1"
                    Margin="35, -10" IsChecked="{Binding DrawLines}"></CheckBox>
    </Grid>
</Window>
